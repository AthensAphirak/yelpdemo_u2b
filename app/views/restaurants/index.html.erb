<p id="notice"><%= notice %></p>

<h1>Restaurants</h1>

<table class="table table-striped table-hover table table-bordered">
  <thead class="table-dark">
    <tr>
      <th>Name ชื่อ-นามสกุล</th>
      <th>Address ที่อยู่</th>
      <th>Phone เบอร์</th>
      <th>Website เว็บไซต์</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @restaurants.each do |restaurant| %>
      <tr>
        <td><%= restaurant.name %></td>
        <td><%= restaurant.address %></td>
        <td><%= restaurant.phone %></td>
        <td><%= restaurant.website %></td>
        <td><%= link_to 'Show', restaurant,class:"btn btn-secondary" %></td>
        <td><%= link_to 'Edit', edit_restaurant_path(restaurant),class:"btn btn-dark" %></td>
        <td><%= link_to 'Destroy', restaurant, method: :delete, data: { confirm: 'Are you sure?' },class:"btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Restaurant', new_restaurant_path ,class:"btn btn-dark" %>
